{
    "[csharp]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "csharpier.csharpier-vscode",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always",
            "source.fixAll": "always"
        },
    },
    "window.zoomLevel": 2,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "csharp.debug.logging.diagnosticsLog.debugEngineAPITracing": "all",
    "csharp.debug.logging.diagnosticsLog.debugRuntimeEventTracing": true,
    "csharp.debug.logging.diagnosticsLog.expressionEvaluationTracing": true,
    "csharp.debug.logging.diagnosticsLog.protocolMessages": true,
    "csharp.debug.logging.diagnosticsLog.startDebuggingTracing": true,
    "csharp.debug.logging.elapsedTiming": true,
    "files.exclude": {
        "**/bin": true,
        "**/obj": true,
    },
    "editor.minimap.autohide": true
}